<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CandidateML" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/primary_background</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:toolbarStyle">@style/Theme.CandidateML.Toolbar</item>
    </style>
    <!-- Toolbar style. -->
    <style name="Theme.CandidateML.Toolbar" parent="Theme.CandidateML">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <!-- Product item list -->
    <style name="Theme.CandidateML.ProductListItem" parent="Theme.CandidateML">
        <item name="android:background">@color/primary_background</item>
    </style>
    <!-- Product item list inner part a.k.a. image product container -->
    <style name="Theme.CandidateML.ProductListItem.Inner" parent="Theme.CandidateML.ProductListItem">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ThemeOverlay.CandidateML.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>